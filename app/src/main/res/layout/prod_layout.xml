<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.user.sqliteproj.CreateTable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="@color/colorMoreLight"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2.24"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="@string/name_id"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_name_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="19.11"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="@string/name_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_name_cost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="3"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="@string/name_cost"
            android:textStyle="bold" />

    </LinearLayout>


    <ListView
        android:id="@+id/lv_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:layout_weight="0.99"
        android:background="@drawable/gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="0.98"
            android:background="@color/colorMoreLight"
            android:hint="@string/field_product"
            tools:text="Name" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/buttonshapeadd"
            android:shadowColor="#A8A8A8"
            android:shadowRadius="7"
            android:text="@string/add_product"
            android:textColor="#F5F51B"
            android:textSize="30sp" />

    </LinearLayout>

</LinearLayout>
