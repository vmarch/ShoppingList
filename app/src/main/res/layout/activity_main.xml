<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:background="@android:color/holo_orange_dark"
    tools:context="com.example.user.sqliteproj.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@android:color/holo_orange_dark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNameId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/holo_purple"
            android:text="@string/name_id" />

        <TextView
            android:id="@+id/tvNameName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="15"
            android:background="@android:color/holo_green_light"
            android:text="@string/name_name" />

        <TextView
            android:id="@+id/tvNamePrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="3"
            android:background="@android:color/holo_green_dark"
            android:text="@string/name_price" />

        <TextView
            android:id="@+id/tvNameQuantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@android:color/holo_blue_dark"
            android:text="@string/name_qt" />

        <TextView
            android:id="@+id/tvNameKind"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:text="@string/name_kind" />

        <TextView
            android:id="@+id/tvNameCost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="3"
            android:background="@android:color/holo_red_light"
            android:text="@string/name_cost" />

    </LinearLayout>


    <ListView
        android:id="@+id/lv_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.91" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/buttonshapeadd"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:text="@string/add_product"
            android:textColor="#F5F51B"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="281dp"
            android:layout_height="match_parent"
            android:alwaysDrawnWithCache="false"
            android:background="@android:color/holo_orange_dark"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tvName"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:width="14dp"
                android:background="@android:color/holo_green_light"
                android:hint="@string/field_product"
                tools:text="Name" />

            <EditText
                android:id="@+id/tvPrice"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:width="5dp"
                android:background="@android:color/holo_green_dark"
                android:hint="@string/field_price"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="false"
                tools:text="Price" />

            <EditText
                android:id="@+id/tvQuantity"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:width="4dp"
                android:background="@android:color/holo_blue_dark"
                android:hint="@string/field_qt"
                android:inputType="numberDecimal"
                tools:text="Qt" />

            <EditText
                android:id="@+id/tvKind"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:width="3dp"
                android:background="@android:color/darker_gray"
                android:hint="@string/field_kind"
                tools:text="Kind" />


        </LinearLayout>

        <Button
            android:id="@+id/btnEmpty"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/buttonshapedel"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:text="@string/clear_field"
            android:textColor="#FF1414"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Read" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear List" />
    </LinearLayout>


</LinearLayout>
